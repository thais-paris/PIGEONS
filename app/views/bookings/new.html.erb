<%= simple_form_for @booking do |f| %>
  <%= f.input :recipient_name %>
  <%= f.input :message %>
  <%= f.input :option_droppings %>
  <%= f.input :option_cooing %>
  <%= hidden_field_tag :date, @date %>
  <%= hidden_field_tag :address, @address %>
  <%= hidden_field_tag :pigeon, @pigeon %>
  <%= f.submit "Envoyer" %>
<% end %>
