
<% if @pigeon.photo.attached? %>
  <% image_string = "url('#{cl_image_path @pigeon.photo.key, width: 800, crop: :thumb, gravity: :face}')" %>
<% else %>
  <% image_string = "url('#{image_path("pigeon-rect.png")}')" %>
<% end %>

<div class="container mt-4 fullheight">

  <h1 class="nom_pigeon"><%= @pigeon.name %></h1>

  <div class="bg-white rounded container p-4 mb-4">

    <div class="row">
      <div class="col-12 col-lg-4 photo_pigeon rounded my-auto" style="background-image: <%= image_string %>">
      </div>

      <div class="col-12 col-lg-8 p-3 pb-0 d-flex flex-column justify-content-between">
        <div>
          <p class='mb-2' ><strong>Adresse : </strong><%= @pigeon.address %></p>
          <p class='mb-2' ><strong>Description : </strong></p>
          <p class='mb-2' ><%= @pigeon.description %></p>
          <p class='mb-2' ><strong>Prix : </strong><%= @pigeon.price_day %> € </p>
          <p class='mb-2' ><strong>Race : </strong><%= @pigeon.breed %></p>
          <p class='mb-2' ><strong>Propriétaire : </strong><%= @pigeon.user.username %></p>
        </div>
        <div class='d-flex justify-content-end w-100'>
          <%= link_to "edit", edit_pigeon_path(@pigeon), class: 'btn btn-warning me-2' %>
          <%= link_to "delete", pigeon_path(@pigeon), method: :delete, class: 'btn btn-warning' %>
        </div>
      </div>
    </div>
  </div>

</div>
