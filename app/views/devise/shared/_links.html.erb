
<div class="d-flex justify-content-end">
    <div class="w-100 text-warning">
      <%- if controller_name != 'sessions' %>
        <%= link_to "J'ai déjà un profil", new_session_path(resource_name), class:"shared-link" %><br />
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Créer mon profil", new_registration_path(resource_name), class:"shared-link" %><br />
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Mot de passe oublié?", new_password_path(resource_name), class:"shared-link" %><br />
      <% end %>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Vous n'avez pas reçu les instructions pour confirmer?", new_confirmation_path(resource_name), class:"shared-link" %><br />
      <% end %>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Vous n'avez pas reçu les instructions pour dévérouiller votre compte?", new_unlock_path(resource_name), class:"shared-link" %><br />
      <% end %>

      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class:"shared-link" %><br />
        <% end %>
      <% end %>
    </div>
</div>
